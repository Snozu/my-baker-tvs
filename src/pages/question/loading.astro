---
import QuestionLayout from '../../layouts/QuestionLayout.astro';
---

<QuestionLayout 
  title="Generando tu <span class='text-red-600'>versión biker</span>"
>
  <div class="flex flex-col items-center justify-center w-full py-8">
    <div class="relative w-64 h-64 flex items-center justify-center mb-8">
      <img src="/assets/images/screens/slide07_loading1.svg" alt="Cargando" class="w-full h-full" onerror="this.src='data:image/svg+xml;utf8,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><circle cx=%2250%22 cy=%2250%22 r=%2240%22 stroke=%22%23FF0033%22 stroke-width=%224%22 fill=%22none%22><animateTransform attributeName=%22transform%22 type=%22rotate%22 from=%220 50 50%22 to=%22360 50 50%22 dur=%221s%22 repeatCount=%22indefinite%22/></circle></svg>'" />
      
      <div class="absolute inset-0 flex items-center justify-center">
        <img src="/assets/images/screens/slide08_loading2.svg" alt="Procesando imagen" class="w-3/4 h-3/4 opacity-50" onerror="this.src='data:image/svg+xml;utf8,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><rect x=%2220%22 y=%2220%22 width=%2260%22 height=%2260%22 fill=%22%23E2E2E2%22 stroke=%22%23FF0033%22 stroke-width=%222%22 stroke-dasharray=%225,5%22><animate attributeName=%22stroke-dashoffset%22 from=%220%22 to=%2210%22 dur=%221s%22 repeatCount=%22indefinite%22/></rect></svg>'" />
      </div>
    </div>
    
    <p class="text-center text-lg font-medium">
      Estamos creando tu versión biker...
    </p>
    
    <div class="w-full max-w-xs bg-gray-300 h-2 rounded-full mt-6 overflow-hidden">
      <div class="bg-red-600 h-full w-3/4 rounded-full">
        <div class="animate-pulse"></div>
      </div>
    </div>
    
    <p class="text-center text-sm text-gray-500 mt-2">
      75% completado
    </p>
  </div>
  
  <!-- No hay botones de navegación en la pantalla de carga -->
  <div slot="footer" class="flex justify-center mt-4">
    <a href="/result" class="px-4 py-2 bg-red-600 text-white rounded-lg opacity-50 pointer-events-none">
      Procesando...
    </a>
  </div>

  <script>
    // Simulación de carga y redirección automática
    setTimeout(() => {
      window.location.href = '/result';
    }, 3000);
  </script>
</QuestionLayout>
