---
import "../styles/global.css";

interface Props {
  backgroundImage?: string;
}
const { backgroundImage } = Astro.props as Props;
---
<!DOCTYPE html>
<html lang="es" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <style>
      /* Reset para eliminar cualquier blancura por defecto */
      html, body { margin:0; padding:0; height:100%; width:100%; }
    </style>
  </head>
  <body class="h-full w-full overflow-hidden bg-[#000000]">
    {backgroundImage && (
      <div class="relative h-full w-full">
        <!-- 1. Color de respaldo (oscuro) -->
        <div class="absolute inset-0 bg-[#000000]"></div>
        <!-- 2. Tu PNG full-cover -->
        <img
          src={backgroundImage}
          alt=""
          class="absolute inset-0 w-full h-full object-cover"
        />
        <!-- 3. Contenido encima -->
        <div class="relative z-10 flex flex-col items-center justify-center h-full w-full">
          <slot />
        </div>
      </div>
    )}
    {!backgroundImage && (
      <div class="flex flex-col items-center justify-center h-full w-full">
        <slot />
      </div>
    )}
  </body>
</html>
