---
import QuestionnaireLayout from '../layouts/QuestionnaireLayout.astro';
---

<QuestionnaireLayout 
  slideNumber="09" 
  title="¡Así te ves" 
  titleHighlight="rodando" 
  questionMark={false}
>
  <div class="flex flex-col items-center justify-center w-full gap-4">
    <div class="relative w-64 h-64 bg-gray-300 rounded-lg overflow-hidden mb-4 border-4 border-gray-400">
      <!-- Aquí iría la imagen final del usuario con todos los filtros aplicados -->
      <div class="absolute inset-0 flex items-center justify-center">
        <img src="/assets/images/screens/slide09_result.jpg" alt="Tu avatar de biker" class="w-full h-full object-cover" />
      </div>
    </div>
    
    <p class="text-center text-sm mb-2">
      ¿Qué piensas de tu versión biker?
    </p>
    
    <button class="w-full py-3 bg-appred text-white rounded-lg font-medium">
      ¡Regístrate con TVS!
    </button>
    
    <div class="flex items-center justify-center mt-4">
      <img src="/assets/images/logos/tvs-logo.svg" alt="TVS Logo" class="h-8" onerror="this.src='data:image/svg+xml;utf8,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 40%22><text x=%2250%22 y=%2225%22 font-family=%22Arial%22 font-size=%2220%22 text-anchor=%22middle%22 fill=%22%23FF0033%22>TVS</text></svg>'" />
    </div>
  </div>
  
  <div slot="footer" class="flex justify-between mt-4">
    <a href="/question/loading" class="px-4 py-2 border border-black rounded-lg flex items-center">
      <img src="/assets/icons/arrow-back.svg" alt="Atrás" class="w-4 h-4 mr-1" onerror="this.src='data:image/svg+xml;utf8,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%2216%22 height=%2216%22 viewBox=%220 0 24 24%22><path d=%22M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z%22/></svg>'" />
      Anterior
    </a>
    <a href="/" class="px-4 py-2 bg-appred text-white rounded-lg flex items-center">
      Inicio
      <img src="/assets/icons/arrow-next.svg" alt="Inicio" class="w-4 h-4 ml-1" onerror="this.src='data:image/svg+xml;utf8,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%2216%22 height=%2216%22 viewBox=%220 0 24 24%22><path fill=%22white%22 d=%22M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z%22/></svg>'" />
    </a>
  </div>
</QuestionnaireLayout>
