---
import QuestionnaireLayout from '../../layouts/QuestionnaireLayout.astro';
---

<QuestionnaireLayout 
  slideNumber="05" 
  title="Acercando tu rostro a la" 
  titleHighlight="cámara" 
  questionMark={false}
>
  <div class="flex flex-col items-center justify-center w-full">
    <div class="relative w-64 h-64 bg-gray-300 rounded-full overflow-hidden mb-4 border-4 border-gray-400">
      <!-- Aquí iría la cámara en una implementación real -->
      <div class="absolute inset-0 flex items-center justify-center">
        <img src="/assets/images/screens/slide05_camera.jpg" alt="Cámara" class="w-full h-full object-cover" onerror="this.src='data:image/svg+xml;utf8,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%22100%22 height=%22100%22 viewBox=%220 0 24 24%22><path d=%22M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z%22/><path d=%22M15 13a3 3 0 11-6 0 3 3 0 016 0z%22/></svg>'" />
      </div>
    </div>
    
    <div class="flex space-x-4 mb-6">
      <button class="w-12 h-12 bg-gray-200 rounded-full flex items-center justify-center">
        <img src="/assets/icons/camera.svg" alt="Cancelar" class="w-6 h-6" onerror="this.src='data:image/svg+xml;utf8,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%2224%22 height=%2224%22 viewBox=%220 0 24 24%22><path d=%22M6 18L18 6M6 6l12 12%22 stroke=%22currentColor%22 stroke-width=%222%22 stroke-linecap=%22round%22 stroke-linejoin=%22round%22/></svg>'" />
      </button>
      <button class="w-16 h-16 bg-white border-4 border-red-600 rounded-full flex items-center justify-center">
        <div class="w-12 h-12 bg-red-600 rounded-full"></div>
      </button>
      <button class="w-12 h-12 bg-gray-200 rounded-full flex items-center justify-center">
        <img src="/assets/icons/camera.svg" alt="Rotar" class="w-6 h-6" onerror="this.src='data:image/svg+xml;utf8,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%2224%22 height=%2224%22 viewBox=%220 0 24 24%22><path d=%22M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15%22 stroke=%22currentColor%22 stroke-width=%222%22 stroke-linecap=%22round%22 stroke-linejoin=%22round%22/></svg>'" />
      </button>
    </div>
  </div>
  
  <div slot="footer" class="flex justify-between mt-4">
    <a href="/question/2" class="px-4 py-2 border border-black rounded-lg flex items-center">
      <img src="/assets/icons/arrow-back.svg" alt="Atrás" class="w-4 h-4 mr-1" onerror="this.src='data:image/svg+xml;utf8,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%2216%22 height=%2216%22 viewBox=%220 0 24 24%22><path d=%22M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z%22/></svg>'" />
      Anterior
    </a>
    <a href="/question/confirm" class="px-4 py-2 bg-red-600 text-white rounded-lg flex items-center">
      Siguiente
      <img src="/assets/icons/arrow-next.svg" alt="Siguiente" class="w-4 h-4 ml-1" onerror="this.src='data:image/svg+xml;utf8,<svg xmlns=%22http://www.w3.org/2000/svg%22 width=%2216%22 height=%2216%22 viewBox=%220 0 24 24%22><path fill=%22white%22 d=%22M12 4l-1.41 1.41L16.17 11H4v2h12.17l-5.58 5.59L12 20l8-8z%22/></svg>'" />
    </a>
  </div>
</QuestionnaireLayout>
